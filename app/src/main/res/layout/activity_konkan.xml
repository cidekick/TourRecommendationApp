<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/konkanbeach"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maharashtra Darshan"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textSize="35dp"
            android:fontFamily="@font/coolvetica_rg"
            android:textColor="@color/white"
            android:background="@drawable/lessroundedbutton"            android:textStyle="bold"
            />

        <Button
            android:id="@+id/alibaug2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:textSize="20dp"
            android:textStyle="bold"

            android:text="Alibaug" />

        <Button
            android:id="@+id/amboli2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="13dp"
            android:textSize="20dp"
            android:textStyle="bold"

            android:text="Amboli" />

        <Button
            android:id="@+id/ganpatipule2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="13dp"
            android:textSize="20dp"
            android:textStyle="bold"

            android:text="Ganpatipule" />

        <Button
            android:id="@+id/nashik2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="13dp"
            android:textSize="20dp"
            android:textStyle="bold"

            android:text="Nashik" />

        <Button
            android:id="@+id/kolhapur2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="13dp"
            android:text="Kolhapur"
            android:textSize="20dp"

            android:textStyle="bold" />

        <Button
            android:id="@+id/panvel2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="13dp"
            android:textSize="20dp"
            android:textStyle="bold"

            android:text="Panvel" />

        <Button
            android:id="@+id/raigad2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="13dp"
            android:textSize="20dp"
            android:textStyle="bold"

            android:text="Raigad" />

        <Button
            android:id="@+id/ratnagiri2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="13dp"
            android:textSize="20dp"
            android:textStyle="bold"

            android:text="Ratnagiri" />

        <Button
            android:id="@+id/tarakarli2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="13dp"
            android:textSize="20dp"
            android:textStyle="bold"

            android:text="Tarakarli" />



    </LinearLayout>

</ScrollView>