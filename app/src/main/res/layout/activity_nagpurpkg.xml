<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/nagpur"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maharashtra Darshan"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textSize="35dp"
            android:fontFamily="@font/coolvetica_rg"
            android:textColor="@color/white"
            android:background="@drawable/lessroundedbutton"            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="25dp"
            android:paddingLeft="20dp"
            android:background="@drawable/lessroundedbuttongrey"
            android:fontFamily="@font/louisgeorge"
            android:text="\nNagpur, the geographical center of India, is a vibrant city known for its rich cultural heritage, delectable cuisine, and warm hospitality. The city's many parks and lakes offer a serene escape from the hustle and bustle of daily life. Nagpur is also home to several prestigious educational institutions and has a thriving economy, making it a city full of opportunities.\n"
            />

        <Button
            android:id="@+id/nagpurngppkg"
            android:layout_width="match_parent"
            android:background="@drawable/roundedbutton"
            android:layout_height="60dp"
            android:layout_marginTop="13dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Nagpur" />

        <Button
            android:id="@+id/tadobangppkg"
            android:layout_width="match_parent"
            android:background="@drawable/roundedbutton"
            android:layout_height="60dp"
            android:layout_marginTop="13dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Tadoba National Park" />

        <Button
            android:id="@+id/chikhaldharangppkg"
            android:layout_width="match_parent"
            android:background="@drawable/roundedbutton"
            android:layout_height="60dp"
            android:layout_marginTop="13dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Chikhaldhara" />

        <Button
            android:id="@+id/tarakarlikonkanpkg"
            android:layout_width="match_parent"
            android:background="@drawable/roundedbutton"
            android:layout_height="60dp"
            android:layout_marginTop="13dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Tarakarli" />

    </LinearLayout>

</ScrollView>