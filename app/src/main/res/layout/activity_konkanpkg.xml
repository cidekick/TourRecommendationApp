<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/konkanbeach"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maharashtra Darshan"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textSize="35dp"
            android:fontFamily="@font/coolvetica_rg"
            android:textColor="@color/white"
            android:background="@drawable/lessroundedbutton"            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="25dp"
            android:paddingLeft="20dp"
            android:background="@drawable/lessroundedbuttongrey"
            android:fontFamily="@font/louisgeorge"
            android:text="\nThe Konkan region, situated along the western coast of India, is a picturesque land of natural beauty and cultural diversity. With its pristine beaches, lush green forests, and magnificent mountains, Konkan is a paradise for nature lovers. The region's rich history, ancient temples, and delectable cuisine add to its charm, making it a must-visit destination for travelers. The warm and hospitable people of Konkan make every visit a memorable one.\n"
            />

        <Button
            android:id="@+id/kolhapurkonkanpkg"
            android:layout_width="match_parent"
            android:background="@drawable/roundedbutton"
            android:layout_height="60dp"
            android:layout_marginTop="13dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Kolhapur" />

        <Button
            android:id="@+id/panvelkonkanpkg"
            android:layout_width="match_parent"
            android:background="@drawable/roundedbutton"
            android:layout_height="60dp"
            android:layout_marginTop="13dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Panvel" />

        <Button
            android:id="@+id/ratnagirikonkanpkg"
            android:layout_width="match_parent"
            android:background="@drawable/roundedbutton"
            android:layout_height="60dp"
            android:layout_marginTop="13dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Ratnagiri" />

        <Button
            android:id="@+id/tarakarlikonkanpkg"
            android:layout_width="match_parent"
            android:background="@drawable/roundedbutton"
            android:layout_height="60dp"
            android:layout_marginTop="13dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Tarakarli" />

    </LinearLayout>

</ScrollView>